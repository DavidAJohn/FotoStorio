@inherits LayoutComponentBase

<!-- navbar top layer -->
<nav class="bg-fotoblue" id="navbar-top">

  <div class="md:container"> <!-- start container -->
    <div class="max-w-7xl mx-auto px-2 sm:px-6 lg:px-8">
      <div class="relative flex items-center justify-between h-16">

          <!-- Hamburger menu button -->
          <div class="absolute inset-y-0 left-0 flex items-center sm:hidden">
            <button type="button" class="inline-flex items-center justify-center p-2 rounded-md text-gray-400 hover:text-white hover:bg-blue-900 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-white" aria-controls="mobile-menu" aria-expanded="false">
              <span class="sr-only">Open main menu</span>

              <svg class="block h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
              </svg>
              <svg class="hidden h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
              </svg>
            </button>
          </div>

          <div class="flex-1 flex items-center justify-center sm:items-stretch sm:justify-start">
              <div class="block md:hidden h-12 w-auto items-center ml-4">
                  <span class="flex items-center justify-center">
                      <i class="bi-camera" style="font-size: 2rem; color: white;"></i>
                  </span>
              </div>
              <!-- Only show large icon and name on md(768px) screens and above -->
              <div class="hidden md:block h-12 w-auto items-center">
                  <span class="flex items-center justify-center">
                      <i class="bi-camera" style="font-size: 2.5rem; color: white; margin-top: -7px; margin-left: 3px;"></i>
                      <a class="text-white text-xl ml-4 pb-2" href="/">Foto Storio</a>
                  </span>
              </div>
          </div>

          <div class="flex flex-row items-center">
            <div class="text-white text-sm font-medium mr-4">
              <a href="/login" class="text-gray-300 hover:bg-blue-900 hover:text-white px-3 py-2 rounded-md text-sm font-medium" aria-current="page">Log In</a>
              <a href="/register" class="text-gray-300 hover:bg-blue-900 hover:text-white px-3 py-2 rounded-md text-sm font-medium">Register</a> 
            </div>

            <div class="flex flex-row justify-between items-center" >
              <span class=" text-white text-sm font-medium">Your Cart:</span>
              <span class=" text-white ml-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" />
                </svg>
              </span>
              <span id="cart-items" class="text-white text-sm ml-2 mr-3 md:mr-2">3</span>
            </div>
          </div>

      </div>
    </div>
  </div> <!-- end container -->

  <!-- Mobile menu, show/hide based on menu state. -->
  <div class="sm:hidden" id="mobile-menu">
    <div class="px-2 pt-2 pb-3 space-y-1">
      <!-- Current: "bg-blue-900 text-white", Default: "text-gray-300 hover:bg-blue-900 hover:text-white" -->
      <a href="/products" class="text-gray-300 hover:bg-blue-900 hover:text-white block px-3 py-2 rounded-md text-base font-medium">DSL Cameras</a>

      <a href="/products" class="text-gray-300 hover:bg-blue-900 hover:text-white block px-3 py-2 rounded-md text-base font-medium">Mirrorless Cameras</a>

      <a href="/products" class="text-gray-300 hover:bg-blue-900 hover:text-white block px-3 py-2 rounded-md text-base font-medium">Lenses</a>

      <a href="/products" class="text-gray-300 hover:bg-blue-900 hover:text-white block px-3 py-2 rounded-md text-base font-medium">Special Offers</a>
    </div>
  </div>

</nav>

<!-- navbar second layer -->
<nav class="bg-blue-900 hidden sm:block">
  <div class="max-w-7xl mx-auto px-2 sm:px-6 lg:px-8">
    <div class="flex items-center justify-center h-16">
      <div>
        <div class="text-white text-sm">
          <NavLink href="products?category=1" class="hover:bg-fotoblue hover:text-white px-3 py-2 my-2 rounded-md uppercase font-bold">DSLR Cameras</NavLink>
        </div>
      </div>
      <div class="mx-2 text-white">|</div>
      <div>
        <div class="text-white text-sm hover:border-b-2 ">
          <NavLink href="products?category=2" class="hover:bg-fotoblue hover:text-white px-3 py-2 my-2 rounded-md uppercase font-bold">Mirrorless Cameras</NavLink>
        </div>
      </div>
      <div class="mx-2 text-white">|</div>
      <div>
        <div class="text-white text-sm">
          <NavLink href="products?category=3" class="hover:bg-fotoblue hover:text-white px-3 py-2 my-2 rounded-md uppercase font-bold">Lenses</NavLink>
        </div>
      </div>
      <div class="mx-2 text-white">|</div>
      <div>
        <div class="text-white text-sm">
          <a href="#" class="hover:bg-fotoblue hover:text-white px-3 py-2 my-2 rounded-md uppercase font-bold">Special Offers</a>
        </div>
      </div>
    </div>
  </div>
</nav>

<!-- main body content -->
<main role="main" class="flex-shrink-0 container max-w-7xl">
    <div class="container">
        <div class="py-5">
            @Body
        </div>
    </div>
</main>
