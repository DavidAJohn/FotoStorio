@inject NavigationManager navigationManager

<input type="text" class="rounded-sm w-3/4 border border-gray-700 shadow-sm px-4 py-2 bg-white focus:outline-none" 
    placeholder="Search the store"
    @bind-value="@SearchTerm" 
    @bind-value:event="oninput"
    @onkeydown:preventDefault
/>
<span class="ml-1">
    <button type="button"
            class="p-2 bg-fotoblue text-white rounded-sm text-md font-semibold hover:opacity-90 fotoblue-ripple"
            @onclick="SearchSubmitted"
    >
        Search
    </button>
</span>

@code {
    [Parameter]
    public string SearchTerm { get; set; }

    [Parameter]
    public EventCallback<string> OnSearchSubmitted { get; set; }

    private async Task SearchSubmitted()
    {
        await OnSearchSubmitted.InvokeAsync(SearchTerm);
        navigationManager.NavigateTo("/products/" + SearchTerm);
    }

}