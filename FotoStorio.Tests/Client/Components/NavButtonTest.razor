@inherits TestContext

@code {
    [Fact]
    public void NavButton_Correctly_Renders_Href_And_Text()
    {
        var cut = Render(@<NavButton Href="/products" ButtonText="Go Back" />);

        cut.MarkupMatches(@<button class="p-2 my-3 bg-fotofuchsia text-white rounded-sm text-sm hover:opacity-90 fotofuchsia-ripple">
                <a href="/products" class="hover:text-white">Go Back</a>
            </button>
        );
    }
}
